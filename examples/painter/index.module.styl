.app
  display: flex
  width: 100vw
  height: 100vh
  overflow: hidden

  .main-stage
    flex-grow: 1
    display: flex
    flex-direction: column
    overflow: hidden

  .canvas-container
    flex-grow: 1
    background-color: #aaa
    overflow: hidden

    &.hide-cursor
      cursor: none

    canvas
      display: block
      touch-action: none

  .toolbar
    display: flex
    align-items: center
    flex-shrink: 0
    height: 30px
    padding: 20px
    gap: 10px
    border-top: 1px solid rgba(0, 0, 0, .1)

    .toolbar-button
      &.selected
        background-color: #007bff
        color: #fff

  .side-bar
    display: flex
    flex-direction: column
    width: 300px
    flex-shrink: 0
    background-color: #fff
    border-left: 1px solid rgba(0, 0, 0, .1)

    .side-bar-header
      padding: 10px 20px

  .layer-list
    flex-grow: 1
    display: flex
    flex-direction: column
    gap: 10px
    padding: 10px
    overflow: auto

    .layer-list-item
      display: flex
      border: 1px solid rgba(0, 0, 0, .1)
      user-select: none
      cursor: pointer

      &.selected
        border-color: #007bff
        background-color: rgba(0, 123, 255, .1)

      &:active
        transform: scale(0.98)

      .visibility-checkbox
        width: 16px
        height: @width

      .preview-img
        width: 60px
        height: 60px
        background-color: red

      .layer-info
        margin-left: 10px

  .brush-size-slider
    display: flex
    align-items: center

    &.hide
      display: none
